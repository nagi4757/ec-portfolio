{
  "name": "ec-portfolio",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:api": "cd apps/api && ./gradlew bootRun",
    "dev:store": "cd apps/store-web && npm run dev",
    "dev:admin": "cd apps/admin-web && npm run dev",
    "dev": "npm-run-all -p dev:api dev:store dev:admin",
    "typegen": "cd packages/contracts && npm run typegen"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
